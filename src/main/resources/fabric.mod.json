{
	"schemaVersion": 1,
	"id": "ccml",
	"version": "${version}",
	"name": "Create Convoy Minigame Library",
	"description": "The official Create Convoy Minigame Library, including: config, events and more.",
	"authors": [
		"virtualengi",
		"Create Convoy"
	],
	"contact": {
		"sources": "https://github.com/FabricMC/fabric-example-mod"
	},
	"license": "MIT",
	"icon": "assets/ccml/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			"be.create.convoy.minigamelib.CreateConvoyMinigameLibrary"
		]
	},
	"mixins": [
		"ccml.mixins.json",
		{
			"config": "ccml.client.mixins.json",
			"environment": "client"
		}
	],
	"depends": {
		"fabricloader": ">=0.16.5",
		"minecraft": ">=1.20.4",
		"java": ">=17",
		"fabric-api": "*"
	}
}